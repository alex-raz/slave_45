<%= simple_form_for(book_wish) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: 'Название книги' %>
    <%= f.input :book_url, label: 'Ссылка на книгу' %>
    <%= f.input :price_rub, label: 'Цена (примерно)' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, button_text %>
  </div>
<% end %>
